<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/seeker_view_spot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.usc.parknpay.seeker.ViewSpotActivity">

    <ImageView android:id="@+id/parking_spot_image"
        android:src="@drawable/default_pic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/toolbar"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <TextView android:id="@+id/address"
        android:text="Address"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/parking_spot_image"
        android:layout_alignTop="@id/parking_spot_image"
        android:layout_marginLeft="20dp"/>

    <TextView android:id="@+id/date_time_range"
        android:text="Date time range"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/parking_spot_image"
        android:layout_alignBottom="@id/parking_spot_image"
        android:layout_marginLeft="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/parking_spot_image"
        android:layout_marginRight="20dp"
        android:layout_marginTop="22dp">

        <ImageView android:id="@+id/call_button"
            android:src="@drawable/phone"
            android:adjustViewBounds="true"
            android:maxWidth="30dp"
            android:maxHeight="30dp"
            android:scaleType="fitCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView android:id="@+id/delete_button"
            android:src="@drawable/delete"
            android:adjustViewBounds="true"
            android:maxWidth="30dp"
            android:maxHeight="30dp"
            android:scaleType="fitCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>
</RelativeLayout>