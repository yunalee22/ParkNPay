<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorAccent"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/toolbar" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="View Spot"
                android:gravity = "center"
                android:id="@+id/toolbar_title"
                android:textSize="24sp"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="normal|bold" />

        </android.support.v7.widget.Toolbar>

        <ImageView
            app:srcCompat="@drawable/testpic"
            android:id="@+id/imageView"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="32dp"
            android:layout_width="130dp"
            android:layout_height="130dp" />

        <TextView
            android:text="Address goes here"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:id="@+id/address"
            android:layout_width="190dp"
            android:textSize="18sp"
            android:layout_alignTop="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:textStyle="normal|bold" />

        <RatingBar
            android:layout_width="wrap_content"
            android:numStars="5"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_gravity="top|start"
            android:id="@+id/ratingBar"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignRight="@+id/address"
            android:layout_alignEnd="@+id/address"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:isIndicator="true"
            android:stepSize="0.1"/>

        <TextView
            android:text="Parking Spot Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingBar"
            android:layout_alignLeft="@+id/address"
            android:layout_alignStart="@+id/address"
            android:id="@+id/spotType"
            android:textSize="15sp" />

        <ScrollView
            android:id="@+id/scroll"
            android:layout_height="80dp"
            android:layout_below="@+id/textView15"
            android:layout_alignLeft="@+id/textView15"
            android:layout_alignStart="@+id/textView15"
            android:layout_marginTop="9dp"
            android:layout_width="340dp">
            <TextView
                android:text="WEWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWW"
                android:id="@+id/notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>

        <TextView
            android:text="Additional Notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:id="@+id/textView15"
            android:textSize="15sp"
            android:textStyle="normal|bold"
            android:layout_below="@+id/imageView"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView" />

        <TextView
            android:text="Availabilites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:id="@+id/textView17"
            android:textStyle="normal|bold"
            android:layout_below="@+id/scroll"
            android:layout_alignLeft="@+id/scroll"
            android:layout_alignStart="@+id/scroll"
            android:textSize="15sp" />

        <ScrollView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_below="@+id/textView17"
            android:layout_alignLeft="@+id/scroll"
            android:layout_alignStart="@+id/scroll">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/availabilities"/>
        </ScrollView>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/addspot"
            android:id="@+id/addAvail"
            android:layout_below="@+id/scroll"
            android:layout_alignRight="@+id/address"
            android:layout_alignEnd="@+id/address"
            android:layout_marginTop="8dp" />

    </RelativeLayout>
    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/black"
        android:dividerHeight="1dp"
        android:background="#fff"/>
</android.support.v4.widget.DrawerLayout>