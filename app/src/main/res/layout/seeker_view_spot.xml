<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorAccent"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/toolbar" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="View Spot"
                android:gravity = "center"
                android:id="@+id/toolbar_title"
                android:textSize="24sp"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="normal|bold" />

        </android.support.v7.widget.Toolbar>

        <ImageView
            app:srcCompat="@drawable/default_pic"
            android:id="@+id/imageView"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="32dp"
            android:layout_width="130dp"
            android:layout_height="130dp" />

        <TextView
            android:text="Address goes here"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:id="@+id/address"
            android:layout_width="190dp"
            android:textSize="18sp"
            android:layout_alignTop="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:textStyle="normal|bold" />

        <RatingBar
            android:layout_width="wrap_content"
            android:numStars="5"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_gravity="top|start"
            android:id="@+id/ratingBar"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignRight="@+id/address"
            android:layout_alignEnd="@+id/address"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:isIndicator="true"
            android:stepSize="0.1"/>

        <ScrollView
            android:id="@+id/scroll"
            android:layout_height="80dp"
            android:layout_below="@+id/textView15"
            android:layout_alignLeft="@+id/textView15"
            android:layout_alignStart="@+id/textView15"
            android:layout_marginTop="9dp"
            android:layout_width="340dp">
            <TextView
                android:text="WEWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWW"
                android:id="@+id/notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>

        <TextView
            android:text="Additional Notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:id="@+id/textView15"
            android:textSize="15sp"
            android:textStyle="normal|bold"
            android:layout_below="@+id/imageView"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView" />


        <TextView
            android:text="Handicapped?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@+id/spotType"
            android:layout_alignStart="@+id/spotType"
            android:id="@+id/time" />

        <TextView
            android:text="Cancellation Policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spotType"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@+id/spotType"
            android:layout_alignStart="@+id/spotType"
            android:id="@+id/date" />

        <TextView
            android:text="Parking Spot Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spotType"
            android:textSize="15sp"
            android:layout_below="@+id/ratingBar"
            android:layout_alignLeft="@+id/address"
            android:layout_alignStart="@+id/address" />

        <TextView
            android:text="Host Information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scroll"
            android:layout_alignLeft="@+id/scroll"
            android:layout_alignStart="@+id/scroll"
            android:layout_marginTop="18dp"
            android:id="@+id/textView5"
            android:textStyle="normal|bold"
            android:textSize="15sp" />

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/scroll"
            android:layout_alignStart="@+id/scroll"
            android:layout_marginTop="20dp">
            <ImageView android:id="@+id/pic"
                android:layout_width="80dp"
                android:scaleType="centerCrop"
                android:layout_height="80dp"
                android:src="@drawable/default_pic" />
            <ImageView android:id="@+id/circle_crop"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/circle_crop" />
        </FrameLayout>

        <TextView
            android:text="Gregory Johnson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner"
            android:textSize="18dp"
            android:layout_alignTop="@+id/frame"
            android:layout_centerHorizontal="true" />

        <RatingBar
            android:layout_width="wrap_content"
            android:numStars="5"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_gravity="top|start"
            android:id="@+id/ratingBar2"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:stepSize="0.1"
            android:layout_alignBottom="@+id/frame"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp" />

    </RelativeLayout>
    <!-- Listview to display slider menu -->

    <LinearLayout
        android:id="@+id/drawerll"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/drawerr"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="#00A8AB"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#00A8AB"
                android:padding="8dp">
                <ImageView android:id="@+id/pic2"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"
                    android:src="@drawable/default_pic" />
                <ImageView android:id="@+id/circle_crop2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/circle_crop_drawer" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/drawer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Gregory Johnson"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Balance: $500"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/left_drawer"
            android:background="#323232"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:dividerHeight="1dp" />
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>