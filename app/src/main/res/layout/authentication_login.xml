<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/activity_login"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:layout_marginTop="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText android:id="@+id/edit_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/email"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/app_title"
        android:layout_centerHorizontal="true" />

    <Button android:id="@+id/login_button"
        android:text="@string/login"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/edit_password"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:onClick="authenticateUser"/>

    <Button android:id="@+id/register_option_button"
        android:text="@string/register_option"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_button"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:onClick="displayRegistrationScreen"/>

    <EditText android:id="@+id/edit_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="@string/password"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/edit_email"
        android:layout_alignLeft="@+id/edit_email"
        android:layout_alignStart="@+id/edit_email" />

    <Button
        android:text="SEEKER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_option_button"
        android:layout_alignLeft="@+id/app_title"
        android:layout_alignStart="@+id/app_title"
        android:id="@+id/SEEKER"
        android:onClick="SeekerTestLogin"/>

    <Button
        android:text="HOST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_option_button"
        android:layout_alignRight="@+id/login_button"
        android:layout_alignEnd="@+id/login_button"
        android:id="@+id/HOST"
        android:onClick="HostTestLogin"/>

</RelativeLayout>