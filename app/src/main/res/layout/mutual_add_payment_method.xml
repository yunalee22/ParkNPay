<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_payment_method"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.usc.parknpay.mutual.AddPaymentMethodActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp">

        <TextView android:id="@+id/paymentMethodTypeLabel"
            android:text="Payment Method Type"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner android:id="@+id/paymentMethodTypeSpinner"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/paymentMethodTypeLabel"
            android:layout_marginTop="10dp"/>

        <TextView android:id="@+id/paymentInformationLabel"
            android:text="Payment Information"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/paymentMethodTypeSpinner"
            android:layout_marginTop="20dp"/>

        <EditText android:id="@+id/paymentInformationField"
            android:hint="Enter payment information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/paymentInformationLabel"
            android:layout_marginTop="10dp"/>

        <Button android:id="@+id/addPaymentMethodButton"
            android:text="Add Payment Method"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@id/paymentInformationField"
            android:layout_marginTop="30dp"/>

    </RelativeLayout>
</LinearLayout>
