<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp">

    <ImageView android:id="@+id/paymentMethodImage"
        android:src="@drawable/venmo_logo"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <TextView android:id="@+id/paymentMethodType"
        android:text="Venmo"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/paymentMethodImage"
        android:layout_marginLeft="20dp"/>

    <TextView android:id="@+id/paymentInformation"
        android:text="Connected to username"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/paymentMethodImage"
        android:layout_below="@id/paymentMethodType"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"/>

</RelativeLayout>