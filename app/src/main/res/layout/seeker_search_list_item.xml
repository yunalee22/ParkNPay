<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.usc.parknpay.seeker.SeekerMainActivity">

    <ImageView android:id="@+id/image"
        android:src="@drawable/default_pic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/toolbar"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>

    <TextView android:id="@+id/address"
        android:text="Address"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image"
        android:layout_alignTop="@id/image"
        android:layout_marginLeft="20dp"/>

    <TextView android:id="@+id/date_time_range"
        android:text="Date time range"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image"
        android:layout_below="@id/address"
        android:layout_marginLeft="20dp"/>

    <TextView android:id="@+id/size"
        android:text="Size"
        android:textSize="16sp"
        android:textColor="@color/orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image"
        android:layout_toRightOf="@id/image"
        android:layout_marginLeft="20dp"/>

    <TextView android:id="@+id/handicap"
        android:text="Handicap Spot"
        android:textSize="16sp"
        android:textColor="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image"
        android:layout_toRightOf="@id/size"
        android:layout_marginLeft="10dp"/>

    <TextView android:id="@+id/price"
        android:text="Price"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>

    <TextView android:id="@+id/distance"
        android:text="Distance"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>

</RelativeLayout>